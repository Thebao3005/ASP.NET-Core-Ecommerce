@model ECommerceMVC.Data.HoaDon

<div class="container py-5">
    <h2>Đơn hàng của bạn đã được đặt thành công!</h2>
    <p><strong>Mã đơn hàng:</strong> @Model.MaHd</p>
    <p><strong>Ngày đặt:</strong> @Model.NgayDat</p>
    <p><strong>Tên khách hàng:</strong> @Model.HoTen</p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.DiaChi</p>
    <p><strong>Phương thức thanh toán:</strong> @Model.CachThanhToan</p>
    <p><strong>Phương thức vận chuyển:</strong> @Model.CachVanChuyen</p>

    <h4>Chi tiết đơn hàng</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietHds)
            {
                <tr>
                    <td>@item.MaHhNavigation.TenHh</td>
                    <td>@item.SoLuong</td>
                    <td>@item.DonGia VND</td>
                    <td>@(item.SoLuong * item.DonGia).ToString("N0") VND</td>
                </tr>
            }
        </tbody>
    </table>
</div>
